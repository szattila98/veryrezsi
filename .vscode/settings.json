{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte"
  ],
  "eslint.workingDirectories": [
    "./client" // replace {PATH_TO_CLIENT} with you own path
  ],
  "files.associations": {
    "*.css": "tailwindcss"
  }
}
